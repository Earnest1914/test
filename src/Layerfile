FROM vm/image  # Usa una m√°quina virtual base de Webapp.io

WORKDIR /app  # Define el directorio de trabajo

COPY . .  # Copia los archivos del repositorio

RUN bash -c "curl -fsSL https://deb.nodesource.com/setup_16.x | bash -"  # Agrega el repositorio de Node.js 16  
RUN apt-get install -y nodejs  # Instala Node.js  

RUN npm install  # Instala dependencias  

RUN npm run build  # Construye la app  

RUN webapp.io preview  # Genera una vista previa
